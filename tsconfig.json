{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "config eng/**/*.js",
    "config de/**/*.js",
    "config ro/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
